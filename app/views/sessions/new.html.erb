
<div class="text-center login-signin">

<h1>Login</h1>

<%= form_tag '/login', class:"form-signin" do %>

  <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email address" %>
  <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <%= submit_tag "Submit", class: "btn btn-lg btn-warning btn-block" %>
  <p class="mt-5 mb-3 text-muted">&copy;2019</p>

<% end %>

</div>

